<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#29BBBB"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sonia.nameplaceanimalthing.instructions">

    <TextView
        android:text="An alphabet is generated randomly by pressing the alphabet button.\n
Name, place(Country), animal and thing of the same alphabet needs to be entered.\n
The timer goes on decreasing with each level.\n
Level 1-120s,\n
Level 2-60s and  \n
Level 3-30s.\n
Each correct answer gets 10 points.\n
Each game has 3 rounds with 3 separate alphabets which are generated \n by pressing the alphabet button.\n
CHALLENGE YOURSELF!\n"
        android:maxLines="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textSize="25sp "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
</RelativeLayout>
